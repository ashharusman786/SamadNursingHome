    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "rollup-plugin-visualizer": "^6.0.5",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3",
    "vite-plugin-pwa": "^1.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
